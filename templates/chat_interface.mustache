<div id="mod_moodlechatbot_chat_{{uniqid}}" class="mod_moodlechatbot_chat">
    <div class="mod_moodlechatbot_messages" data-region="messages">
        {{#messages}}
            {{> mod_moodlechatbot/chat_message}}
        {{/messages}}
    </div>
    <div class="mod_moodlechatbot_input">
        <textarea name="message" rows="3" data-region="input" 
                  placeholder="{{#str}}typemessage, mod_moodlechatbot{{/str}}"></textarea>
        <button type="button" class="btn btn-primary" data-action="send">
            {{#str}}send, mod_moodlechatbot{{/str}}
        </button>
    </div>
</div>

{{#js}}
require(['mod_moodlechatbot/chat'], function(Chat) {
    Chat.init('#mod_moodlechatbot_chat_{{uniqid}}');
});
{{/js}}
